{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "GRIPLOCK",
  "logo": {
    "dark": "/images/logo.png",
    "light": "/images/logo.png"
  },
  "favicon": "/images/logo.png",
  "colors": {
    "primary": "#A8B4C0",
    "light": "#C5CED6",
    "dark": "#0D0D0D"
  },
  "navbar": {
    "links": [
      {
        "label": "GitHub",
        "href": "https://github.com/griplock"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Launch App",
      "href": "https://griplock.app"
    }
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Getting Started",
            "pages": ["introduction", "quickstart", "roadmap"]
          },
          {
            "group": "Architecture",
            "pages": [
              "architecture/overview",
              "architecture/data-flow",
              "architecture/components"
            ]
          },
          {
            "group": "Security",
            "pages": [
              "security/key-derivation",
              "security/encryption",
              "security/session-management"
            ]
          },
          {
            "group": "Features",
            "pages": [
              "features/cards",
              "features/ramp",
              "features/x402",
              "features/privacy"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "API Reference",
            "pages": [
              "api-reference/overview",
              "api-reference/websocket",
              "api-reference/payloads"
            ]
          }
        ]
      }
    ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/griplockapp",
      "github": "https://github.com/griplock"
    }
  },
  "appearance": {
    "default": "dark"
  }
}
