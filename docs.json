{
  "$schema": "https://mintlify.com/schema.json",
  "theme": "mint",
  "name": "GRIPLOCK",
  "logo": {
    "dark": "/images/logo.png",
    "light": "/images/logo.png"
  },
  "favicon": "/images/logo.png",
  "colors": {
    "primary": "#A8B4C0",
    "light": "#C5CED6",
    "dark": "#0D0D0D"
  },
  "topbarLinks": [
    {
      "name": "GitHub",
      "url": "https://github.com/griplock"
    }
  ],
  "topbarCtaButton": {
    "name": "Launch App",
    "url": "https://griplock.app"
  },
  "tabs": [
    {
      "name": "Documentation",
      "url": "/"
    },
    {
      "name": "API Reference",
      "url": "/api-reference"
    }
  ],
  "navigation": [
    {
      "group": "Getting Started",
      "pages": ["introduction", "quickstart", "roadmap"]
    },
    {
      "group": "Architecture",
      "pages": [
        "architecture/overview",
        "architecture/data-flow",
        "architecture/components"
      ]
    },
    {
      "group": "Security",
      "pages": [
        "security/key-derivation",
        "security/encryption",
        "security/session-management"
      ]
    },
    {
      "group": "Features",
      "pages": [
        "features/cards",
        "features/ramp",
        "features/x402",
        "features/privacy"
      ]
    },
    {
      "group": "API Reference",
      "pages": [
        "api-reference/overview",
        "api-reference/websocket",
        "api-reference/payloads"
      ]
    }
  ],
  "footerSocials": {
    "x": "https://x.com/griplockapp",
    "github": "https://github.com/griplock"
  },
  "modeToggle": {
    "default": "dark"
  },
  "font": {
    "headings": {
      "family": "JetBrains Mono",
      "weight": 700
    },
    "body": {
      "family": "Inter",
      "weight": 400
    }
  }
}
